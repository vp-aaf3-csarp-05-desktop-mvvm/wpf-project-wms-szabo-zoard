<Window x:Class="WMSProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMSProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EmployeeViewmodel/>
    </Window.DataContext>
    <StackPanel Orientation="Vertical" Margin="10">
        <Label Content="Név:"/>
        <TextBlock Text="{Binding Nev}" FontSize="16" Margin="0,0,0,10"/>
        <Label Content="Adószám:"/>
        <TextBlock Text="{Binding Adoszam}" FontSize="16" Margin="0,0,0,10"/>
        <Label Content="Szabadnapok száma:"/>
        <TextBlock Text="{Binding SzabadnapokSzama}" FontSize="16" Margin="0,0,0,10"/>
    </StackPanel>
</Window>

